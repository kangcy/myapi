    //保存
    function Save() {
        if (isLoading) {
            return;
        }
        isLoading = true;
        var title = $("#title0").html().trim();
        if (base.IsNullOrEmpty(title) || title == "我的小微篇" || title == "请输入文章标题") {
            layer.msg("请输入文章标题");
            isLoading = false;
            return;
        }
        if (base.IsNullOrEmpty(title)) {
            title = "我的小微篇"
        }

        var userid = $("#ddl_user").attr("index");
        if (userid < 0 && ArticleID == 0) {
            layer.msg("请选择创建人");
            isLoading = false;
            return;
        }

        var articlepower = $("#filter_articlepower").attr("index");
        var articletype = $("#filter_articletype").attr("index");
        if (articlepower < 0) {
            layer.msg("请选择文章权限");
            isLoading = false;
            return;
        }
        if (articletype < 0) {
            layer.msg("请选择文章类型");
            isLoading = false;
            return;
        }
        var articlepowerpwd = $("#articlepowerpwd").val().trim();
        if (articlepower == 1 && base.IsNullOrEmpty(articlepowerpwd)) {
            layer.msg("请输入权限密码");
            isLoading = false;
            return;
        }
        var piccount = 0;
        //重置排序（按top属性从小到大排）
        $.each($(".edit-content"), function (i, item) {
            var partid = item.getAttribute("partid");
            var parttype = item.getAttribute("type");
            if (parttype == "pic") {
                piccount = 1;
            }
            var sortid = i;
            //同步原始段落信息			
            $.each(InitParts, function (index, item) {
                if (item.ID == partid) {
                    InitParts[index].SortID = sortid;
                }
            });
        })
        if (piccount <= 0) {
            layer.msg("请至少上传一张图片");
            isLoading = false;
            return;
        }
        layer.load();

        var param = {
            ID: userid,
            ArticleID: ArticleID,
            Title: escape(title),
            MusicID: MusicID,
            MusicName: MusicName,
            MusicUrl: MusicUrl,
            Template: CurrTemplate,
            ColorTemplate: CurrColorTemplate,
            ShowyUrl: Showy,
            ArticlePower: articlepower,
            ArticleType: articletype,
            ArticlePowerPwd: articlepowerpwd,
            Cover: Cover,
            Part: escape(JSON.stringify(InitParts))
        }
        $.ajax({
            url: "@(ViewBag.RootUrl)Article/PcEdit",
            dataType: "json",
            data: $.param(param),
            type: "post",
            success: function (data) {
                if (data != null) {
                    if (data.result) {
                        layer.msg("编辑成功,请刷新文章列表查看");
                        parent.Refresh(true);
                        var index = parent.layer.getFrameIndex(window.name);
                        parent.layer.close(index);
                    } else {
                        isLoading = false;
                    }
                } else {
                    isLoading = false;
                }
                layer.closeAll('loading');
            }
        });
    }
