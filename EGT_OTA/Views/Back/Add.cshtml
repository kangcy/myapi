                background-image: url("../Back/Images/on.png");
                background-repeat: no-repeat;
                background-size: 1.5rem;
                background-position: 0.5rem center;
            }

            .music[play=stop] {
                background-image: url("../Back/Images/off.png");
                background-repeat: no-repeat;
                background-size: 1.5rem;
                background-position: 0.5rem center;
            }

            .music span {
                margin: 0;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                text-align: left;
            }
        /**新版**/

        #x-bg {
            position: fixed;
            height: 100%;
            width: 100%;
        }

        .root {
            width: 100%;
            height: 100%;
            position: relative;
            z-index: 0;
        }

            .root.x-cover {
                width: 100%;
                position: relative;
