                letter-spacing: 0;
                margin: 0;
            }

        .x-content {
            position: relative;
        }

            .x-content .section {
                display: inline-block;
            }

                .x-content .section.temp {
                    padding: 0px 3% 3% 3%;
                }
            /*.x-content .section .text {
				line-height: 1.8 !important;
				word-wrap: break-word;
				font-weight: normal;
				white-space: pre-wrap;
				font-family: PingFangSC-Light;
			}*/
            /*.x-content .section img {
				width: 100%;
				vertical-align: bottom;
			}*/

            .x-content .x-bg-blur {
                /*background: rgba(27, 62, 85, 0.6);*/
                width: 94%;
                height: 100%;
                z-index: -1;
                top: 0;
                -webkit-backdrop-filter: blur(12px);
                position: absolute;
                border-radius: 8px;
            }

        .well2 {
            padding: 0 3%;
        }
    </style>
