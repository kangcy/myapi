<body>
    <div class="el-card hide" style="display: inline-block; border: 0; border-bottom: 1px solid #d1dbe5;" id="box">
        <div class="el-card__header">
            <div class="clearfix">
                <div class="el-form-item inline full fl mt5">
                    <div class="el-form-item inline fl" style="width: 20%;">
                        <div class="el-form-item__content inline">
                            <div class="btn-group">
                                <button id="ddl_user" index="-1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="width: 100px;">
                                    选择创建人
                                                  <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu tc full">
                                    <li><a href="#" onclick="change(-1,'template','选择创建人')" class="ddl_user" index="-1">选择创建人</a></li>
                                    @{
                                        var list = (List<User>)ViewBag.Users;
                                        foreach (var x in list)
                                        {
                                        <li><a href="#" onclick="change(@(x.ID),'ddl_user','@(x.NickName)')" class="ddl_user" index="@(x.ID)" number="@(x.Number)">@(x.NickName)</a></li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="el-form-item inline fl" style="width: 20%;">
                        <div class="el-form-item__content inline">
                            <div class="btn-group">
                                <button id="filter_articlepower" index="-1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="width: 100px;">
                                    请选择权限
                                                  <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu tc full">
                                    <li><a href="#" onclick="change(-1,'filter_articlepower','请选择权限')" class="ddl_filter_articlepower" index="-1">请选择权限</a></li>
                                    <li><a href="#" onclick="change(3,'filter_articlepower','公开')" class="ddl_filter_articlepower" index="3">公开</a></li>
                                    <li><a href="#" onclick="change(2,'filter_articlepower','限制可见')" class="ddl_filter_articlepower" index="2">限制可见</a></li>
                                    <li><a href="#" onclick="change(1,'filter_articlepower','密码可见')" class="ddl_filter_articlepower" index="1">密码可见</a></li>
                                    <li><a href="#" onclick="change(0,'filter_articlepower','私密')" class="ddl_filter_articlepower" index="0">私密</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="el-form-item fl hide" style="width: 20%;" id="div_articlepowerpwd">
                        <div class="el-form-item__content inline">
                            <div class="el-input el-input--small">
                                <input id="articlepowerpwd" placeholder="权限密码" size="small" maxlength="4" type="text" class="el-input__inner">
                            </div>
                        </div>
                    </div>
                    <div class="el-form-item fl" style="width: 20%;">
                        <div class="el-form-item__content inline">
                            <div class="btn-group">
                                <button id="filter_articletype" index="-1" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="width: 100px;">
                                    请选择分类
                                                  <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu tc full">
                                    <li><a href="#" onclick="change(-1,'filter_articletype','请选择分类')" class="ddl_filter_articletype" index="-1">请选择分类</a></li>
                                    <li><a href="#" onclick="change(1,'filter_articletype','旅行')" class="ddl_filter_articletype" index="1">旅行</a></li>
                                    <li><a href="#" onclick="change(3,'filter_articletype','亲子')" class="ddl_filter_articletype" index="3">亲子</a></li>
                                    <li><a href="#" onclick="change(5,'filter_articletype','女神')" class="ddl_filter_articletype" index="5">女神</a></li>
                                    <li><a href="#" onclick="change(2,'filter_articletype','美食')" class="ddl_filter_articletype" index="2">美食</a></li>
                                    <li><a href="#" onclick="change(8,'filter_articletype','萌宠')" class="ddl_filter_articletype" index="8">萌宠</a></li>
                                    <li><a href="#" onclick="change(10,'filter_articletype','二次元')" class="ddl_filter_articletype" index="10">二次元</a></li>
