        //初始化装扮 
        function InitShowy(src) {
            if (base.IsNullOrEmpty(src)) {
                return
            }
            LoadScript("../js/snow.js", function () {
                var srcs = src.split("|");
                if (srcs.length > 2) {
                    snow.init(srcs[0], srcs[1], srcs[2])
                } else {
                    snow.init(src, 1, 0)
                }
            });
        }

        //更新自定义装扮
        function UpdateShowy(src) {
            if (base.IsNullOrEmpty(Showy)) {
                InitShowy(src)
            } else {
                snow.clear();
                if (!base.IsNullOrEmpty(src)) {
                    mui.later(function () {
                        var srcs = src.split("|");
                        if (srcs.length >= 2) {
                            snow.init(srcs[0], srcs[1], srcs[2])
                        } else {
                            snow.init(src, 1, 0)
                        }
                    }, 750);
                }
            }
            Showy = src;
        }

