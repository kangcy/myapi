            position: absolute;
            width: 100%;
            height: 715px;
            left: 0;
            top: 0;
            z-index: 2;
        }

        #btnTemp,
        #btnColor {
            position: fixed;
            right: 1rem;
            bottom: 4rem;
            width: 4rem;
            z-index: 99;
        }

        .mui-table-view-cell {
            padding: .625rem .9375rem;
        }

        /*.edit-content hr {
            margin-top: 3rem;
        }*/

        .swiper-cover {
